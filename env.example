# CRM Configuration
# Customize the name displayed throughout the application
# Default: "Insight Loop CRM"
NEXT_PUBLIC_CRM_NAME=Insight Loop CRM

# Logo URL for the sidebar (optional)
# Provide a URL or path to your company logo image
# If not provided, a placeholder logo will be displayed
# Example: NEXT_PUBLIC_CRM_LOGO=/logo.png or NEXT_PUBLIC_CRM_LOGO=https://example.com/logo.png
# NEXT_PUBLIC_CRM_LOGO=

# Firebase Client Configuration (Public - exposed to browser)
# These values can be found in your Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin Configuration (Server-side only)
# These values come from your Firebase service account JSON file
# Download from: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Google OAuth Configuration (Server-side only)
# These values come from Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID credentials for web application
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/gmail/callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/calendar https://www.googleapis.com/auth/contacts.readonly https://www.googleapis.com/auth/contacts.other.readonly https://www.googleapis.com/auth/contacts

# Google API Key (for Gemini API)
# Get from: Google Cloud Console > APIs & Services > Credentials > Create Credentials > API Key
GOOGLE_API_KEY=your_google_api_key

# Optional: Cron Job Secret (for scheduled sync jobs)
# Set a random secret to secure your cron endpoints
CRON_SECRET=your_random_secret_here

# Google Calendar Webhook Configuration
# URL where Google Calendar will send push notifications
# This should be your production domain + /api/calendar/webhook
# Example: https://yourdomain.com/api/calendar/webhook
GOOGLE_CALENDAR_WEBHOOK_URL=https://yourdomain.com/api/calendar/webhook

# Google Calendar Webhook Secret (optional but recommended)
# Set a random secret to secure your webhook endpoint
# Generate with: openssl rand -hex 32
# When set, webhook requests must include X-Webhook-Secret header with this value
GOOGLE_CALENDAR_WEBHOOK_SECRET=your_webhook_secret_here

# Calendar Sync Cron Secret (for scheduled sync jobs)
# Set a random secret to secure your calendar sync-dirty endpoint
# Generate with: openssl rand -hex 32
# When calling /api/calendar/sync-dirty from cron, include: Authorization: Bearer <secret>
CALENDAR_SYNC_CRON_SECRET=your_calendar_sync_cron_secret_here

# Optional: Enable Firestore logging (for debugging)
ENABLE_FIRESTORE_LOGGING=false

# Error Reporting Configuration
# Options: "console" (default), "sentry", "none"
NEXT_PUBLIC_ERROR_REPORTING_PROVIDER=console
# Sentry DSN (required if using "sentry" provider)
# Get from: Sentry Dashboard > Settings > Projects > Client Keys (DSN)
SENTRY_DSN=

# UI Mode Configuration (for visual regression testing)
# Optional: Controls the UI state across all pages for testing purposes
# Options: "suspense" (show loading states), "empty" (show empty states), "normal" (use real data)
# Default: "normal" - If this variable is missing, commented out, or empty, the app runs in normal mode
# Example: NEXT_PUBLIC_UI_MODE=suspense
# NEXT_PUBLIC_UI_MODE=normal

