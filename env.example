# CRM Configuration
# Customize the name displayed throughout the application
# Default: "Insight Loop CRM"
NEXT_PUBLIC_CRM_NAME=Insight Loop CRM

# Firebase Client Configuration (Public - exposed to browser)
# These values can be found in your Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin Configuration (Server-side only)
# These values come from your Firebase service account JSON file
# Download from: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Google OAuth Configuration (Server-side only)
# These values come from Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID credentials for web application
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/gmail/callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/gmail.readonly

# Google API Key (for Gemini API)
# Get from: Google Cloud Console > APIs & Services > Credentials > Create Credentials > API Key
GOOGLE_API_KEY=your_google_api_key

# Optional: Cron Job Secret (for scheduled sync jobs)
# Set a random secret to secure your cron endpoints
CRON_SECRET=your_random_secret_here

# Optional: Enable Firestore logging (for debugging)
ENABLE_FIRESTORE_LOGGING=false

