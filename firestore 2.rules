rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /contacts/{contactId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Action items subcollection (regular subcollection queries)
        match /actionItems/{actionItemId} {
          allow read: if request.auth != null && 
            request.auth.uid == userId;
          allow write: if request.auth != null && 
            request.auth.uid == userId && 
            request.resource.data.userId == request.auth.uid;
        }
      }

      // Calendar events collection
      match /calendarEvents/{eventId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /threads/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /threads/{threadId}/messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /syncJobs/{jobId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /googleAccounts/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only server admin writes tokens
    }
    
    // Collection group query rule for actionItems (matches any path ending in actionItems)
    // This MUST be at root level (not nested) for collectionGroup('actionItems') queries to work
    match /{path=**}/actionItems/{actionItemId} {
      // Check document's userId field for collection group queries
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      // Writes still go through the specific path rule above
      allow write: if false;
    }
  }
}
